{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
        // "prettier"
    ],
    "rules": {
        "linebreak-style": ["warn", "windows"],
        "no-console": "off",
        // "prettier/prettier": ["warn", {"singleQuote": true, "endOfLine": "auto"}],
        "quotes": ["warn", "single"],
        "indent": ["warn", 2],
        "import/prefer-default-export": "off",
        "consistent-return": "off",
        "import/extensions": "off",
        "import/no-unresolved": "off",  
        "no-unused-vars": "warn",
        "no-undef": "off"
    },
    "ignorePatterns": ["*.d.ts"]
}
