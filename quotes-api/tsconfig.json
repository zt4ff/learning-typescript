{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "strict": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "typeRoots": [
      "@types",
      "node_modules/@types"
    ],
    "types": ["./@types", "node", "jest"],
  },
  "include": ["src/**.ts"],
  "exclude": ["node_modules", ".cache"],
}
